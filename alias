alias e find-file $1
alias g git -c color.ui=always -c core.pager=cat $*
alias ga git add $*
alias gau git add -u
alias gcom git commit
alias gcamend git commit --amend --no-edit --date=now
alias gd magit-diff-unstaged
alias gds magit-diff-staged
alias ggb git -c color.ui=always -c core.pager=cat log --oneline --decorate --graph --all -n 20 $*
alias gl git -c color.ui=always -c core.pager=cat log --oneline --decorate -n 20 $*
alias gs git -c color.ui=always -c core.pager=cat status $*
alias l ls -1 $*
